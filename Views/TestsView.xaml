<UserControl x:Class="Lexify.Views.TestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lexify.Views"
             mc:Ignorable="d" Height="680" Width="890">

    <Grid Background="#ECEFF4" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Grid.Row="0" 
                   Text="Testler ve Alıştırmalar" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Test Kartları -->
        <WrapPanel Grid.Row="1" Orientation="Horizontal">
            <!-- Karışık Test -->
            <Border Background="White" 
                    BorderBrush="#E5E9F0" 
                    BorderThickness="1" 
                    Width="250" 
                    Height="200" 
                    CornerRadius="8" 
                    Margin="0,0,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#5E81AC" 
                            Height="8"/>
                    <StackPanel Grid.Row="1" Margin="15">
                        <TextBlock Text="Karışık Test" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Kelimelerinizden rastgele sorular içeren bir test çözün." 
                                   TextWrapping="Wrap" 
                                   Foreground="#4C566A"/>
                    </StackPanel>

                    <Button Grid.Row="2" 
                            Content="Teste Başla" 
                            Margin="15" 
                            Padding="10" 
                            Background="#5E81AC" 
                            Foreground="White" 
                            BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- Kelimeden Anlama Testi -->
            <Border Background="White" 
                    BorderBrush="#E5E9F0" 
                    BorderThickness="1" 
                    Width="250" 
                    Height="200" 
                    CornerRadius="8" 
                    Margin="0,0,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#A3BE8C" 
                            Height="8"/>

                    <StackPanel Grid.Row="1" Margin="15">
                        <TextBlock Text="Kelimeden Anlama" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Verilen kelimelerden doğru tanımı seçin." 
                                   TextWrapping="Wrap" 
                                   Foreground="#4C566A"/>
                    </StackPanel>

                    <Button Grid.Row="2" 
                            Content="Teste Başla" 
                            Margin="15" 
                            Padding="10" 
                            Background="#A3BE8C" 
                            Foreground="White" 
                            BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- Tanımdan Kelime Testi -->
            <Border Background="White" 
                    BorderBrush="#E5E9F0" 
                    BorderThickness="1" 
                    Width="250" 
                    Height="200" 
                    CornerRadius="8" 
                    Margin="0,0,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#EBCB8B" 
                            Height="8"/>

                    <StackPanel Grid.Row="1" Margin="15">
                        <TextBlock Text="Tanımdan Kelime" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Verilen tanımın hangi kelimeye ait olduğunu bulun." 
                                   TextWrapping="Wrap" 
                                   Foreground="#4C566A"/>
                    </StackPanel>

                    <Button Grid.Row="2" 
                            Content="Teste Başla" 
                            Margin="15" 
                            Padding="10" 
                            Background="#EBCB8B" 
                            Foreground="White" 
                            BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- Sesletimden Kelime Testi -->
            <Border Background="White" 
                    BorderBrush="#E5E9F0" 
                    BorderThickness="1" 
                    Width="250" 
                    Height="200" 
                    CornerRadius="8" 
                    Margin="0,0,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#B48EAD" 
                            Height="8"/>

                    <StackPanel Grid.Row="1" Margin="15">
                        <TextBlock Text="Sesletimden Kelime" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Duyduğunuz kelimenin doğru yazılışını bulun." 
                                   TextWrapping="Wrap" 
                                   Foreground="#4C566A"/>
                    </StackPanel>

                    <Button Grid.Row="2" 
                            Content="Teste Başla" 
                            Margin="15" 
                            Padding="10" 
                            Background="#B48EAD" 
                            Foreground="White" 
                            BorderThickness="0"/>
                </Grid>
            </Border>
        </WrapPanel>
    </Grid>
</UserControl>
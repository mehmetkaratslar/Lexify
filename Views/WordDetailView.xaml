<UserControl x:Class="Lexify.Views.WordDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lexify.Views"
             mc:Ignorable="d" Height="731" Width="905">

    <Grid Background="#ECEFF4" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık ve Butonlar -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="Geri" 
                    Padding="15,8" 
                    Margin="0,0,15,0" 
                    Background="#E5E9F0" 
                    BorderThickness="0"/>

            <TextBlock Grid.Column="1" 
                       Text="Kelime Detayları" 
                       FontSize="24" 
                       FontWeight="Bold"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="Düzenle" 
                        Padding="15,8" 
                        Margin="0,0,10,0" 
                        Background="#EBCB8B" 
                        Foreground="White" 
                        BorderThickness="0"/>

                <Button Content="Sil" 
                        Padding="15,8" 
                        Background="#BF616A" 
                        Foreground="White" 
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Kelime Detayları -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Sol Panel - Ana Bilgiler -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="8" 
                        Margin="0,0,5,0" 
                        Padding="20"
                        BorderBrush="#E5E9F0"
                        BorderThickness="1">
                    <StackPanel>
                        <!-- Kelime Başlığı -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{Binding Word.WordText}" 
                                       FontSize="32" 
                                       FontWeight="Bold"/>

                            <Border Background="{Binding Word.ColorCode}" 
                                    Width="10" 
                                    Height="32" 
                                    CornerRadius="5" 
                                    Margin="15,0,0,0"/>
                        </StackPanel>

                        <!-- Kelime Bilgileri -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="{Binding Word.WordType}" 
                                       FontStyle="Italic" 
                                       Foreground="#4C566A" 
                                       Margin="0,0,15,0"/>

                            <TextBlock Text="{Binding Word.Language}" 
                                       FontStyle="Italic" 
                                       Foreground="#4C566A"/>
                        </StackPanel>

                        <!-- Tanımlar -->
                        <TextBlock Text="Tanımlar" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding Word.Definitions}" Margin="0,0,0,20">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FC" 
                                            CornerRadius="5" 
                                            Margin="0,0,0,5" 
                                            Padding="10">
                                        <TextBlock Text="{Binding DefinitionText}" 
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Örnekler -->
                        <TextBlock Text="Örnek Cümleler" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding Word.Examples}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FC" 
                                            CornerRadius="5" 
                                            Margin="0,0,0,5" 
                                            Padding="10">
                                        <TextBlock Text="{Binding ExampleText}" 
                                                   TextWrapping="Wrap" 
                                                   FontStyle="Italic"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Sağ Panel - Ek Bilgiler -->
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="8" 
                        Margin="5,0,0,0" 
                        Padding="20"
                        BorderBrush="#E5E9F0"
                        BorderThickness="1">
                    <StackPanel>
                        <!-- Öğrenme Durumu -->
                        <TextBlock Text="Öğrenme Durumu" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <Border Background="#F8F9FC" 
                                CornerRadius="5" 
                                Padding="10" 
                                Margin="0,0,0,20">
                            <TextBlock Text="{Binding Word.LearningStatus}" 
                                       FontWeight="SemiBold"/>
                        </Border>

                        <!-- Eş/Zıt Anlamlılar -->
                        <TextBlock Text="İlişkili Kelimeler" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding Word.RelatedWordsFrom}" Margin="0,0,0,20">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FC" 
                                            CornerRadius="5" 
                                            Margin="0,0,0,5" 
                                            Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="{Binding RelationType}" 
                                                       FontSize="12" 
                                                       Foreground="#4C566A"/>

                                            <TextBlock Text="{Binding RelatedWord.WordText}" 
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Ekleme Tarihi -->
                        <TextBlock Text="Ekleme Tarihi" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <Border Background="#F8F9FC" 
                                CornerRadius="5" 
                                Padding="10">
                            <TextBlock Text="{Binding Word.DateAdded, StringFormat=dd.MM.yyyy}"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
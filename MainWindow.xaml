<Window x:Class="Lexify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lexify"
        xmlns:viewmodels="clr-namespace:Lexify.ViewModels"
        xmlns:views="clr-namespace:Lexify.Views"
        mc:Ignorable="d"
        Title="Lexify - Kelime Öğrenme Uygulaması" Height="650" Width="1000">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WordsViewModel}">
            <views:WordsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AddEditWordViewModel}">
            <views:AddEditWordView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WordDetailViewModel}">
            <views:WordDetailView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:TestsViewModel}">
            <views:TestsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StatisticsViewModel}">
            <views:StatisticsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>

        <!-- Value Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Null değeri için görünürlük dönüştürücüsü -->
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sol navigasyon menüsü -->
        <Border Background="#2E3440" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="Lexify" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="10,20,10,5" 
                           TextAlignment="Center"/>

                <TextBlock Text="Kelime Öğrenme Uygulaması" 
                           Foreground="#88FFFFFF" 
                           FontSize="12" 
                           Margin="10,0,10,30" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center"/>

                <Button Content="Ana Sayfa" 
                        Height="45" 
                        Margin="10,5" 
                        Command="{Binding NavigateToDashboardCommand}" 
                        Background="#3B4252" 
                        Foreground="White" 
                        BorderThickness="0"/>

                <Button Content="Kelimelerim" 
                        Height="45" 
                        Margin="10,5" 
                        Command="{Binding NavigateToWordsCommand}" 
                        Background="#3B4252" 
                        Foreground="White" 
                        BorderThickness="0"/>

                <Button Content="Yeni Kelime Ekle" 
                        Height="45" 
                        Margin="10,5" 
                        Command="{Binding NavigateToAddWordCommand}" 
                        Background="#3B4252" 
                        Foreground="White" 
                        BorderThickness="0"/>

                <Button Content="Testler" 
                        Height="45" 
                        Margin="10,5" 
                        Command="{Binding NavigateToTestsCommand}" 
                        Background="#3B4252" 
                        Foreground="White" 
                        BorderThickness="0"/>

                <Button Content="İstatistikler" 
                        Height="45" 
                        Margin="10,5" 
                        Command="{Binding NavigateToStatisticsCommand}" 
                        Background="#3B4252" 
                        Foreground="White" 
                        BorderThickness="0"/>

                <Button Content="Ayarlar" 
                        Height="45" 
                        Margin="10,5" 
                        Command="{Binding NavigateToSettingsCommand}" 
                        Background="#3B4252" 
                        Foreground="White" 
                        BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Sağ tarafta dinamik içerik -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" />
    </Grid>
</Window>